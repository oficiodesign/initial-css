{
  "name": "initial-css",
  "version": "0.1.0",
  "description": "CSS Framework",
  "main": "index.scss",
  "scripts": {
    "prebuild": "npm-run-all test",
    "build": "npm-run-all build:*",
    "build:docs": "sassdoc stylesheets/ -d ./build",
    "clean": "npm-run-all --parallel clean:*",
    "clean:build": "rimraf ./build/",
    "clean:testResults": "rimraf ./testResults/**/*.xml",
    "clean:compilationTest": "rimraf ./testResults/**/*.css",
    "compile:sass": "node-sass ./stylesheets --output-style compressed --output ./testResults",
    "lint": "npm-run-all --parallel lint:*",
    "lint:sass": "sass-lint \"./stylesheets/**/*.scss\" --verbose --no-exit --format junit --output ./testReports/sassLint.xml",
    "pretest": "npm-run-all clean lint",
    "compile:tests": "node-sass ./stylesheets/tests --output ./stylesheets/tests --outputStyle expanded",
    "test": "npm-run-all compile:sass",
    "watch": "onchange \"./stylesheets/**/*.scss\" -- npm run compile:tests",
    "start": "npm-run-all compile:tests watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://sobral@bitbucket.org/sobral/initial-css.git"
  },
  "keywords": [
    "sass"
  ],
  "author": "sobral <sobral@eokoe.com>",
  "license": "MIT",
  "devDependencies": {
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "sassdoc": "^2.4.0"
  }
}
