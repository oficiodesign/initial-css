{
  "plugins": [
    "stylelint-order"
  ],
  "ignoreFiles": [
    "stylesheets/vendor/**/*.scss",
    "stylesheets/tests/**/*.scss"
  ],
  "rules": {
    "declaration-block-trailing-semicolon": "always",
    "color-hex-case": "lower",
    "color-no-hex": true,
    "color-no-invalid-hex": true,
    "indentation": "tab",
    "color-hex-length": "long",
    "selector-type-case": "lower",
    "no-missing-end-of-source-newline": true,
    "number-leading-zero": "always",
    "string-quotes": "single",
    "declaration-colon-space-before": "never",
    "declaration-colon-space-after": "always",
    "selector-combinator-space-after": "always",
    "declaration-block-single-line-max-declarations": 1,
    "block-opening-brace-space-before": "always",
    "block-opening-brace-newline-after": "always",
    "selector-list-comma-newline-before": "never-multi-line",
    "selector-list-comma-newline-after": "always-multi-line",
    "selector-list-comma-space-before": "never",
    "no-eol-whitespace": true,
    "length-zero-no-unit": true,
    "no-duplicate-selectors": true,
    "declaration-property-value-blacklist": {
      "/^border\\-\\w*\\-?width$/": ["none"]
    },
    "order/order": [
      {
        "type": "at-rule",
        "name": "extend",
      },
      {
        "type": "at-rule",
        "name": "include",
        "hasBlock": false
      },
      "dollar-variables",
      "custom-properties",
      "declarations",
      "rules",
      "at-rules",
      {
        "type": "at-rule",
        "name": "page",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "font-face",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "animation",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "include",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "media",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "return",
        "hasBlock": false
      },
    ],
    "order/properties-order": [
      {
        "emptyLinesBefore": "always",
        "properties": [
          "position",
          "top",
          "right",
          "bottom",
          "left"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "float",
          "clear"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "display",
          "z-index"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "align-content",
          "align-items",
          "align-self",
          "flex",
          "flex-basis",
          "flex-direction",
          "flex-flow",
          "flex-grow",
          "flex-shrink",
          "flex-wrap",
          "justify-content",
          "order"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "grid",
          "grid-template-rows",
          "grid-template-columns",
          "grid-template-areas",
          "grid-auto-rows",
          "grid-auto-columns",
          "grid-auto-flow",
          "grid-column-gap",
          "grid-row-gap"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "width",
          "height",
          "max-width",
          "max-height",
          "min-width",
          "min-height"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "padding",
          "padding-top",
          "padding-right",
          "padding-bottom",
          "padding-left",
          "margin",
          "margin-top",
          "margin-right",
          "margin-bottom",
          "margin-left",
          "margin-collapse",
          "margin-top-collapse",
          "margin-right-collapse",
          "margin-bottom-collapse",
          "margin-left-collapse"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "overflow",
          "overflow-x",
          "overflow-y",
          "clip",
          "clip-path"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "src",
          "font",
          "font-style",
          "font-variant",
          "font-weight",
          "font-stretch",
          "font-size",
          "line-height",
          "font-family",
          "font-kerning",
          "font-size-adjust",
          "font-feature-settings",
          "font-smoothing",
          "osx-font-smoothing",
          "-webkit-font-smoothing",
          "-moz-osx-font-smoothing",
          "letter-spacing",
          "word-spacing"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "text-emphasis",
          "text-emphasis-style",
          "text-emphasis-color",
          "text-emphasis-position"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "column",
          "column-width",
          "column-count",
          "column-fill",
          "column-gap",
          "column-span",
          "column-rule",
          "column-rule-width",
          "column-rule-style",
          "column-rule-color",
          "orphans",
          "widows"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "break-after",
          "break-before",
          "break-inside",
          "page-break-after",
          "page-break-before",
          "page-break-inside"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "hyphens",
          "text-align",
          "text-decoration",
          "text-decoration-color",
          "text-decoration-style",
          "text-decoration-line",
          "text-underline-position",
          "text-indent",
          "text-overflow",
          "text-rendering",
          "text-size-adjust",
          "text-shadow",
          "text-transform",
          "word-break",
          "word-wrap",
          "overflow-wrap",
          "white-space",
          "vertical-align",
          "writing-mode",
          "text-combine-upright",
          "text-orientation"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "list-style",
          "list-style-type",
          "list-style-position",
          "list-style-image"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "cursor",
          "pointer-events",
          "touch-action",
          "-webkit-tap-highlight-color"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "color"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "background",
          "background-image",
          "background-position",
          "background-position-x",
          "background-position-y",
          "background-size",
          "background-repeat",
          "background-origin",
          "background-clip",
          "background-attachment",
          "background-color"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "border",
          "border-top",
          "border-right",
          "border-bottom",
          "border-left",
          "border-width",
          "border-top-width",
          "border-right-width",
          "border-bottom-width",
          "border-left-width",
          "border-style",
          "border-top-style",
          "border-right-style",
          "border-bottom-style",
          "border-left-style",
          "border-color",
          "border-top-color",
          "border-right-color",
          "border-bottom-color",
          "border-left-color",
          "border-image",
          "border-image-source",
          "border-image-slice",
          "border-image-width",
          "border-image-outset",
          "border-image-repeat",
          "border-radius",
          "border-top-left-radius",
          "border-top-right-radius",
          "border-bottom-right-radius",
          "border-bottom-left-radius",
          "border-radius-topright",
          "border-radius-bottomright",
          "border-radius-bottomleft",
          "border-radius-topleft"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "content",
          "counter-increment",
          "counter-reset",
          "quotes"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "outline",
          "outline-color",
          "outline-offset",
          "outline-style",
          "outline-width"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "opacity",
          "filter",
          "image-rendering",
          "-ms-interpolation-mode",
          "visibility",
          "object-fit",
          "perspective",
          "size",
          "transform",
          "transform-origin",
          "transform-style",
          "zoom"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "-webkit-box-align",
          "box-align",
          "box-flex",
          "box-orient",
          "box-pack",
          "box-shadow",
          "box-sizing"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "table-layout",
          "border-collapse",
          "border-spacing",
          "empty-cells",
          "caption-side"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "will-change",
          "animation",
          "animation-name",
          "animation-duration",
          "animation-timing-function",
          "animation-delay",
          "animation-iteration-count",
          "animation-direction",
          "animation-fill-mode",
          "animation-play-state",
          "transition",
          "transition-delay",
          "transition-duration",
          "transition-property",
          "transition-timing-function"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "backface-visibility",
          "resize",
          "-webkit-appearance",
          "-moz-appearance",
          "appearance",
          "user-select",
          "interpolation-mode",
          "direction",
          "marks",
          "set-link-source",
          "unicode-bidi",
          "speak",
          "tab-size"
        ],
      },
      {
        "emptyLinesBefore": "always",
        "properties": [
          "scroll-behavior",
          "scroll-snap-coordinate",
          "scroll-snap-destination",
          "scroll-snap-points-x",
          "scroll-snap-points-y",
          "scroll-snap-type"
        ],
      },
    ],
  }
}
