root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{css,scss,sass}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[package.json]
indent_style = space
indent_size = 2
